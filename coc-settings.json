{
    "codeLens.enable": true,
    "codeLens.position": "eol",

    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.enableMessageDialog": true,
    "coc.preferences.formatOnType": true,
    "coc.preferences.willSaveHandlerTimeout": 1000,
    "coc.preferences.enableLinkedEditing": true,

    "coc.preferences.semanticTokensHighlights": false,
    "coc.preferences.enableFloatHighlight": true,
    "coc.preferences.snippetStatusText": "Ⓢ ",

    "coc.source.file.ignoreHidden": false,
    "coc.source.around.firstMatch": false,
    "coc.source.buffer.firstMatch": false,
    "coc.source.syntax.firstMatch": false,

    "diagnostic.floatConfig": {
        "rounded": true,
        "border": true
    },
    "diagnostic.format": "%message [%source]",
    "diagnostic.virtualText": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.separateRelatedInformationAsDiagnostics": true,

    "diagnostic.signOffset": 1,
    "diagnostic.errorSign": "\uf467",
    "diagnostic.warningSign": "\uf071",
    "diagnostic.infoSign": "\uf129",
    "diagnostic.hintSign": "\uf864",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.virtualTextPrefix": " ❯❯❯ ",

    "list.normalMappings": {
        "<C-c>": "do:exit"
    },
    "list.insertMappings": {
        "<C-c>": "do:exit"
    },
    "list.source.grep.useLiteral": false,
    "list.source.grep.defaultArgs": [
        "--ignore-case"
    ],

    "list.previewHighlightGroup": "Statement",
    "list.nextKeymap": "<C-e>",
    "list.previousKeymap": "<C-u>",

    "signature.target": "echo",
    "signature.floatConfig": {
        "rounded": true,
        "border": true
    },

    "suggest.detailField": "abbr",
    "suggest.defaultSortMethod": "none",
    "suggest.selection": "recentlyUsedByPrefix",
    "suggest.floatConfig": {
        "rounded": true,
        "border": true
    },

    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.autoTrigger": "always",
    "suggest.triggerCompletionWait": 100,
    "suggest.echodocSupport": true,
    "suggest.completionItemKindLabels": {
        "class": "\uf0e8",
        "color": "\ue22b",
        "constant": "\uf8fe",
        "default": "\uf29c",
        "enum": "\uf435",
        "enumMember": "\uf02b",
        "event": "\ufacd",
        "field": "\uf93d",
        "file": "\uf723",
        "folder": "\uf115",
        "function": "\u0192",
        "interface": "\uf417",
        "keyword": "\uf1de",
        "method": "\uf6a6",
        "module": "\uf40d",
        "operator": "\uf915",
        "property": "\ue624",
        "reference": "\ufa46",
        "snippet": "\ue60b",
        "struct": "\ufb44",
        "text": "\ue612",
        "typeParameter": "\uf728",
        "unit": "\uf475",
        "value": "\uf89f",
        "variable": "\ue71b"
    },

    "Lua.completion.callSnippet": "Both",
    "Lua.runtime.version": "LuaJIT",
    "Lua.telemetry.enable": false,
    "Lua.diagnostics.globals": [
        "vim",
        "jit",
        "ngx"
    ],
    "Lua.IntelliSense.traceBeSetted": true,
    "Lua.IntelliSense.traceFieldInject": true,
    "Lua.IntelliSense.traceLocalSet": true,
    "Lua.IntelliSense.traceReturn": true,
    "Lua.workspace.library": [
        "${3rd}/OpenResty/library"
    ],
    "Lua.workspace.checkThirdParty": false,

    "sumneko-lua.enableNvimLuaDev": true,
    "sumneko-lua.locale": "zh-cn",
    "sumneko-lua.logPath": "z:/TEMP/sumneko-lua",

    "markdownlint.config": {
        "default": true,
        "line_length": false,
        "onOpen": true,
        "onChange": false,
        "onSave": false
    },

    "languageserver": {
        "lua": {
            "command": "lua-lsp",
            "filetypes": ["lua"]
        }
    }
}
